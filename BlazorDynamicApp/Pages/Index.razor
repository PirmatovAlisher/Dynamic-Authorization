<h1>Nested Checkboxes</h1>

<!-- Parent Checkbox -->
<div>
	<label>
		<input type="checkbox" class="parent-checkbox" onchange="toggleNested(this)">
		Parent 1
	</label>
	<!-- Nested Children -->
	<div class="nested">
		<label>
			<input type="checkbox" class="child-checkbox" onchange="updateParent(this)">
			Child 1.1
		</label>
		<label>
			<input type="checkbox" class="child-checkbox" onchange="updateParent(this)">
			Child 1.2
		</label>
		<label>
			<input type="checkbox" class="child-checkbox" onchange="updateParent(this)">
			Child 1.3
		</label>
	</div>
</div>

